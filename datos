# 1. √Årea y per√≠metro de figuras (men√∫)

import math

def triangulo():
    base = float(input("Ingrese la base: "))
    altura = float(input("Ingrese la altura: "))
    lado = float(input("Ingrese el lado: "))
    area = (base * altura) / 2
    perimetro = base + altura + lado
    print(f"√Årea del tri√°ngulo: {area}")
    print(f"Per√≠metro del tri√°ngulo: {perimetro}")

def cuadrado():
    lado = float(input("Ingrese el lado: "))
    area = lado ** 2
    perimetro = 4 * lado
    print(f"√Årea del cuadrado: {area}")
    print(f"Per√≠metro del cuadrado: {perimetro}")

def circunferencia():
    radio = float(input("Ingrese el radio: "))
    area = math.pi * radio ** 2
    perimetro = 2 * math.pi * radio
    print(f"√Årea de la circunferencia: {area}")
    print(f"Per√≠metro de la circunferencia: {perimetro}")

while True:
    print("\n1. Tri√°ngulo\n2. Cuadrado\n3. Circunferencia\n4. Salir")
    opcion = input("Elija una opci√≥n: ")
    if opcion == "1":
        triangulo()
    elif opcion == "2":
        cuadrado()
    elif opcion == "3":
        circunferencia()
    elif opcion == "4":
        break
    else:
        print("Opci√≥n inv√°lida")


#2 Notas de Estudiantes


def calcular_nota_final():
    p1 = float(input("Nota 1: "))
    p2 = float(input("Nota 2: "))
    p3 = float(input("Nota 3: "))
    return (p1 + p2 + p3) / 3

aprobados = reprobados = total = suma = 0

while True:
    nombre = input("Nombre del estudiante: ")
    nota_final = calcular_nota_final()
    suma += nota_final
    total += 1

    if nota_final >= 3.0:
        aprobados += 1
    else:
        reprobados += 1

    continuar = input("¬øDesea ingresar otro estudiante? (s/n): ")
    if continuar.lower() != "s":
        break

print(f"\nTotal estudiantes: {total}")
print(f"Aprobados: {aprobados}, Reprobados: {reprobados}")
print(f"Promedio general: {suma/total:.2f}")



#3 Factorial + pares/impares


def pedir_numero():
    return int(input("Ingrese un n√∫mero entero positivo: "))

def calcular_datos(n):
    factorial = 1
    pares, impares = 0, 0
    suma_pares, suma_impares = 0, 0

    for i in range(1, n+1):
        factorial *= i
        if i % 2 == 0:
            pares += 1
            suma_pares += i
        else:
            impares += 1
            suma_impares += i

    return factorial, pares, impares, suma_pares, suma_impares

def mostrar_resultado(factorial, pares, impares, suma_pares, suma_impares):
    print("\n--- Resultados ---")
    print("Factorial:", factorial)
    print("Cantidad de pares:", pares, "‚Üí Suma:", suma_pares)
    print("Cantidad de impares:", impares, "‚Üí Suma:", suma_impares)

n = pedir_numero()
factorial, pares, impares, suma_pares, suma_impares = calcular_datos(n)
mostrar_resultado(factorial, pares, impares, suma_pares, suma_impares)



#4 Menu con operaciones aritmeticas

def sumar(a, b):
    return a + b

def restar(a, b):
    return a - b

def multiplicar(a, b):
    return a * b

def dividir(a, b):
    if b != 0:
        return a / b
    else:
        return "Error: divisi√≥n por cero"

while True:
    print("\n--- Calculadora ---")
    print("1. Sumar")
    print("2. Restar")
    print("3. Multiplicar")
    print("4. Dividir")
    print("5. Salir")
    opcion = input("Seleccione una opci√≥n: ")

    if opcion == "5":
        break

    a = float(input("Ingrese el primer n√∫mero: "))
    b = float(input("Ingrese el segundo n√∫mero: "))

    if opcion == "1":
        print("Resultado:", sumar(a, b))
    elif opcion == "2":
        print("Resultado:", restar(a, b))
    elif opcion == "3":
        print("Resultado:", multiplicar(a, b))
    elif opcion == "4":
        print("Resultado:", dividir(a, b))
    else:
        print("Opci√≥n inv√°lida")


#5 Control de ventas semanales

def pedir_venta(dia):
    return float(input(f"Ingrese ventas del {dia}: "))

def calcular_total(lunes, martes, miercoles, jueves, viernes, sabado, domingo):
    return lunes + martes + miercoles + jueves + viernes + sabado + domingo

def mostrar_resumen(total):
    promedio = total / 7
    print("\n--- Resumen de Ventas ---")
    print("Total de ventas:", total)
    print("Promedio de ventas:", promedio)

print("=== Control de Ventas ===")

dias = ["Lunes", "Martes", "Mi√©rcoles", "Jueves", "Viernes", "S√°bado", "Domingo"]

i = 0
lunes = martes = miercoles = jueves = viernes = sabado = domingo = 0.0


while i < len(dias):
    if dias[i] == "Lunes":
        lunes = pedir_venta("Lunes")
    elif dias[i] == "Martes":
        martes = pedir_venta("Martes")
    elif dias[i] == "Mi√©rcoles":
        miercoles = pedir_venta("Mi√©rcoles")
    elif dias[i] == "Jueves":
        jueves = pedir_venta("Jueves")
    elif dias[i] == "Viernes":
        viernes = pedir_venta("Viernes")
    elif dias[i] == "S√°bado":
        sabado = pedir_venta("S√°bado")
    elif dias[i] == "Domingo":
        domingo = pedir_venta("Domingo")
    i += 1

total = calcular_total(lunes, martes, miercoles, jueves, viernes, sabado, domingo)
mostrar_resumen(total)


#6 Factorial con bucle

def pedir_numero():
    return int(input("Ingrese un n√∫mero entero no negativo: "))

def calcular_factorial(n):
    factorial = 1
    for i in range(1, n+1):
        factorial *= i
    return factorial

def mostrar_resultado(n, factorial):
    print(f"El factorial de {n} es {factorial}")

n = pedir_numero()
resultado = calcular_factorial(n)
mostrar_resultado(n, resultado)



#7 Suma de n√∫meros pares hasta n
def pedir_numero():
    return int(input("Ingrese un n√∫mero entero positivo: "))

def sumar_pares(n):
    suma = 0
    for i in range(2, n + 1, 2):
        suma += i
    return suma

def mostrar_resultado(suma):
    print("La suma de los n√∫meros pares es:", suma)

n = pedir_numero()
resultado = sumar_pares(n)
mostrar_resultado(resultado)

#8 Verificar si una palabra es pal√≠ndromo

def pedir_palabra():
    return input("Ingrese una palabra: ")

def es_palindromo(palabra):
    # Comprobamos manualmente con bucle y condicional
    for i in range(len(palabra) // 2):
        if palabra[i] != palabra[-(i+1)]:
            return False  # Si una letra no coincide, ya no es pal√≠ndromo
    return True  # Si todas coinciden, s√≠ lo es

def mostrar_resultado(palabra, resultado):
    if resultado:
        print(f"{palabra} es un pal√≠ndromo")
    else:
        print(f"{palabra} NO es un pal√≠ndromo")

palabra = pedir_palabra()
resultado = es_palindromo(palabra)
mostrar_resultado(palabra, resultado)


#9 Conversi√≥n de temperaturas Celsius ‚Üí Fahrenheit

def pedir_cantidad():
    return int(input("¬øCu√°ntas temperaturas desea convertir? "))

def convertir_celsius_a_fahrenheit(c):
    return (c * 9/5) + 32

def mostrar_conversion(c, f):
    print(f"{c}¬∞C  =  {f}¬∞F")

cantidad = pedir_cantidad()

i = 0
while i < cantidad:
    c = float(input("Ingrese temperatura en ¬∞C: "))
    f = convertir_celsius_a_fahrenheit(c)
    mostrar_conversion(c, f)
    i += 1


#10 Tabla de multiplicar
def pedir_numero():
    return int(input("Ingrese un n√∫mero entero: "))

def generar_tabla(n):
    for i in range(1, 11):
        print(f"{n} x {i} = {n * i}")

def mostrar_tabla(n):
    print(f"\n--- Tabla de multiplicar del {n} ---")
    generar_tabla(n)

n = pedir_numero()
mostrar_tabla(n)


#11 Contar d√≠gitos en un n√∫mero

def pedir_numero():
    return int(input("Ingrese un n√∫mero entero positivo: "))

def contar_digitos(n):
    contador = 0
    while n > 0:
        n //= 10
        contador += 1
    return contador

def mostrar_resultado(digitos):
    print("Cantidad de d√≠gitos:", digitos)

n = pedir_numero()
digitos = contar_digitos(n)
mostrar_resultado(digitos)


#12 Verificar si un n√∫mero es primo

def pedir_numero():
    return int(input("Ingrese un n√∫mero entero: "))

def es_primo(n):
    if n < 2:
        return False
    for i in range(2, int(n**0.5) + 1):
        if n % i == 0:
            return False
    return True

def mostrar_resultado(n, resultado):
    if resultado:
        print(n, "es un n√∫mero primo")
    else:
        print(n, "NO es un n√∫mero primo")

n = pedir_numero()
resultado = es_primo(n)
mostrar_resultado(n, resultado)


#13 Separar n√∫meros pares e impares

def pedir_numero():
    return int(input("Ingrese un n√∫mero entero positivo: "))

def separar_pares_impares(n):
    pares, impares = [], []
    for i in range(1, n+1):
        if i % 2 == 0:
            pares.append(i)
        else:
            impares.append(i)
    return pares, impares

def mostrar_listas(pares, impares):
    print("\nN√∫meros pares:", pares)
    print("N√∫meros impares:", impares)

n = pedir_numero()
pares, impares = separar_pares_impares(n)
mostrar_listas(pares, impares)


#14 Control de temperatura


def obtener_humedad():
    return random.randint(20, 100)

def regar():
    print("Activando sistema de riego...")

def monitorear(umbral):
    while True:
        humedad = obtener_humedad()
        print(f"Humedad actual: {humedad}%")
        
        if humedad < umbral:
            regar()
        else:
            print("Humedad suficiente, no es necesario regar.")
            break

umbral = int(input("Ingrese el umbral de humedad deseado (%): "))
monitorear(umbral)

#15 Control de iluminaci√≥n

def pedir_datos():
    hora = int(input("Ingrese la hora actual (0-23): "))
    en_casa = input("¬øHay alguien en casa? (s/n): ").lower() == "s"
    return hora, en_casa

def decidir_luces(hora, en_casa):
    if 18 <= hora <= 23 or 0 <= hora < 6:  # noche
        if en_casa:
            return "Luces encendidas"
        else:
            return "Luces apagadas (nadie en casa)"
    else:  # d√≠a
        return "Luces apagadas (es de d√≠a)"

def mostrar_resultado(resultado):
    print("\n" + resultado)

hora, en_casa = pedir_datos()
resultado = decidir_luces(hora, en_casa)
mostrar_resultado(resultado)


#16 Riego autom√°tico de jard√≠n

def obtener_bateria():
    return random.randint(0, 100)

def mostrar_estado(bateria):
    if bateria <= 15:
        print(f"‚ö†Ô∏è Bater√≠a baja ({bateria}%) - Conecta el cargador.")
    elif bateria <= 50:
        print(f"üîã Bater√≠a media ({bateria}%)")
    else:
        print(f"‚úÖ Bater√≠a alta ({bateria}%)")

def monitorear_bateria():
    while True:
        bateria = obtener_bateria()
        mostrar_estado(bateria)
        if bateria <= 15:
            break  

monitorear_bateria()




